@model DsiCodeTech.SuPlazaWeb.Contabilidad.Dto.UsuarioDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&amp;display=swap" rel="stylesheet">
    <title>Login</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <noscript>
        <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript", "Error")" />
    </noscript>
    <br />
    <div class="container">
        @using (Html.BeginForm("Login", "Seguridad", FormMethod.Post))
        {
            
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url(/Images/retail.jpg); width: 80%; ">
                        </div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Login</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>


                            <div class="form-group mb-3">
                                <label class="label" for="name">Username</label>
                                @Html.TextBoxFor(model => model.User_name, null, new { @class = "form-control form-control-sm", placeholder = "Nombre de Usuario", required = "required" })
                                @Html.ValidationMessageFor(Model => Model.User_name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Password</label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-sm", placeholder = "Password", required = "required" })
                                @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50 text-left">
                                    <label class="checkbox-wrap checkbox-primary mb-0">
                                        Recordarme
                                        <input type="checkbox" checked="">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#">Olvidaste el Password?</a>
                                </div>
                            </div>


                            <p class="text-center">No eres un miembro? <a data-toggle="tab" href="#">Registrate</a></p>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</body>
</html>
